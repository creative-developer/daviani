{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true
  },
  // "exclude": ["node_modules"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "app/**/*.ts",
  ],
  "compileOnSave": false,
  "buildOnSave": false
}